<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <com.github.pavlospt.CircleView
        android:id="@+id/cv_item_color"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cv_backgroundColorValue="@color/white"
        app:cv_fillColor="@color/cyan_light"
        app:cv_strokeColorValue="@color/yellow"
        app:cv_strokeWidthSize="5"
        app:cv_subtitleSize="0dp"
        app:cv_titleSize="0dp" />
</LinearLayout>