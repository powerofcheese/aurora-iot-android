<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.happylrd.aurora.activity_music"
    android:background="@color/grey_dark">
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_music_recyclerView"
    ></android.support.v7.widget.RecyclerView>
    <FrameLayout
        android:id="@+id/id_music_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_overlay">
        <com.sa90.materialarcmenu.ArcMenu
            android:id="@+id/id_music_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:menu_scr="@drawable/shoe_button"
            app:menu_open="arc_left"
            app:menu_ripple_color="@color/white"
            app:menu_color="@color/colorPrimary"
            >

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/id_music_fab_return"
                android:background="@color/white"
                android:src="@drawable/ic_assignment_return_black_48dp"
                android:layout_height="wrap_content" />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/id_music_fab_pause"
                android:background="@color/white"
                android:src="@drawable/ic_pause_circle_outline_black_48dp"
                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/id_music_fab_contunite_play"
                android:background="@color/white"
                android:src="@drawable/ic_play_circle_outline_black_48dp"
                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/id_music_fab_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_equalizer_black_48dp"/>
        </com.sa90.materialarcmenu.ArcMenu>


    </FrameLayout>


</RelativeLayout>
